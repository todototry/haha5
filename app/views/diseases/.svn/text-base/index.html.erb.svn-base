<h1>Listing diseases</h1>

<table>
  <tr>
    <th>Com</th>
    <th>Piginfo</th>
    <th>Diseasedesc</th>
    <th>Time</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @diseases.each do |disease| %>
  <tr>
    <td><%= disease.com_id %></td>
    <td><%= disease.piginfo_id %></td>
    <td><%= disease.diseasedesc_id %></td>
    <td><%= disease.time %></td>
    <td><%= disease.note %></td>
    <td><%= link_to 'Show', disease %></td>
    <td><%= link_to 'Edit', edit_disease_path(disease) %></td>
    <td><%= link_to 'Destroy', disease, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Disease', new_disease_path %>
